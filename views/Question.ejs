<%- include('./partials/header') %>
<body>
  <%- include('./partials/navbar') %>
  <div class="container">
    <hr>
    <h1><%=Question.titulo %></h1>
    <p><%= Question.descricao %></p>
    <hr>
    <form method="post" action="/responder">
      <h3 for="body">Responda</h3>
      <br>
      <label for="">Resposta</label>
      <textarea placeholder="Digite sua resposta" class="form-control" name="body"></textarea>
      <br>
      <input type="hidden" name="questionId" value="<%=Question.id %>">
      <button type="submit" class="btn btn-success">Responder</button>
    </form>

    <div>
      <hr>
      <h3>Respostas:</h3>
      <br>
      <% Answers.forEach(item =>{ %>
        <div class="card">
          <div class="card-body">
            <p><%= item.body %></p>
          </div>
        </div>
        <hr>
      <% }) %>
    </div>
  </div>
</body>
<%- include('./partials/footer') %>